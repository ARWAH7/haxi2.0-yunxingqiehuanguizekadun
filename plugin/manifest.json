{
  "manifest_version": 3,
  "name": "哈希游戏下注执行器",
  "version": "4.3.0",
  "description": "配合HAXI前端托管系统的下注执行器 - 接收前端命令执行真实下注",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*.amazonaws.com/*",
    "http://*.amazonaws.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazonaws.com/*",
        "http://*.amazonaws.com/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "哈希自动下注"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
